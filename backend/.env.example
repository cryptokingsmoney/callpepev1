# Backend env
PORT=4000
NODE_ENV=development
JWT_SECRET=dev-secret

# Supabase / Postgres connection string
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require
# Stripe (optional until you add webhooks)
STRIPE_KEY=sk_test_placeholder
# Stripe webhook secret (required to auto-credit users after checkout)
STRIPE_WEBHOOK_SECRET=whsec_placeholder

# Stripe Connect (creator cashout)
# These are where Stripe redirects the creator after onboarding.
# If blank, backend will fall back to FRONTEND_URL/creator?stripe=...
STRIPE_CONNECT_REFRESH_URL=http://localhost:5173/creator?stripe=refresh
STRIPE_CONNECT_RETURN_URL=http://localhost:5173/creator?stripe=return

# Twilio Network Traversal Service (TURN/STUN)
# Get from Twilio Console â†’ Account Dashboard (Account SID + Auth Token)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Seconds - default 3600
TWILIO_TURN_TTL=3600

# Frontend base url for Stripe redirect links
FRONTEND_URL=http://localhost:5173


# BNB Chain stablecoin verification (required for credit purchases)
# Use a reliable BSC RPC (Ankr, QuickNode, Alchemy, your own node, etc.)
BSC_RPC_URL=https://bsc-dataseed.binance.org/
TREASURY_ADDRESS=0x7CEAbE8C631Dd3Bf1F62F0a7CE187Db537553951
# Binance-Peg USDC on BSC (default in code if blank)
BSC_USDC_ADDRESS=0x8ac76a51cc950d9822d68b83fe1ad97b32cd580d

# Recommended: wait for 2+ confirmations before crediting
MIN_CONFIRMATIONS=2
