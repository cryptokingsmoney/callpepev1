generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  CREATOR
  ADMIN
}

enum CreditTxType {
  PURCHASE
  SPEND
  REFUND
  ADJUST
}

enum CallStatus {
  ACTIVE
  ENDED
  KILLED_INSUFFICIENT_CREDITS
}

model User {
  id      String   @id @default(cuid())
  wallet  String   @unique
  email   String?
  role    UserRole @default(USER)

  /// Stored in milli-credits to keep everything integer & auditable.
  creditsMilli Int @default(0)

  /// Optional freeze controls (used by webhook dispute/refund safety)
  isFrozen     Boolean @default(false)
  frozenReason String?

  creatorProfile CreatorProfile?

  callsMade     Call[] @relation("CallsMade")
  callsReceived Call[] @relation("CallsReceived")

  groupsOwned       Group[]       @relation("UserGroupsOwned")
  groupMemberships  GroupMember[] @relation("UserGroupMemberships")
  hostedGroupCalls  GroupCall[]   @relation("UserHostedGroupCalls")

  creditTxs CreditTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CreditTransaction {
  id               String       @id @default(cuid())
  userId           String
  type             CreditTxType
  usdCents         Int?
  creditsDeltaMilli Int
  ref              String?

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@index([userId])
  @@unique([ref])
}

model WebhookEvent {
  /// Stores Stripe event.id for optional global idempotency
  id        String   @id
  type      String
  createdAt DateTime @default(now())
}

model CreatorProfile {
  id     String @id @default(cuid())
  userId String @unique

  /// Milli-credits charged per second.
  rateMilliCreditsPerSecond Int @default(1000)

  bio      String?
  isOnline Boolean @default(false)

  earnedMilli  Int @default(0)
  paidOutMilli Int @default(0)

  stripeAccountId String? @unique

  user User @relation(fields: [userId], references: [id])
}

enum PayoutMethod {
  CRYPTO
  STRIPE
}

model CreatorEarningTransaction {
  id                 String   @id @default(cuid())
  creatorUserId      String
  callId             String
  creditsEarnedMilli Int

  /// Unique ref so we can upsert idempotently on call end.
  ref String @unique

  createdAt DateTime @default(now())

  @@index([creatorUserId])
  @@index([callId])
}

enum PayoutStatus {
  REQUESTED
  APPROVED
  SENT
  REJECTED
}

model CreatorPayoutRequest {
  id            String       @id @default(cuid())
  creatorUserId String
  destination   String
  method        PayoutMethod @default(CRYPTO)
  amountMilli   Int
  status        PayoutStatus @default(REQUESTED)
  note          String?

  stripeTransferId String?
  stripePayoutId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([creatorUserId])
  @@index([status])
}

model Call {
  id String @id @default(cuid())

  userId    String
  creatorId String

  roomId String?
  status CallStatus @default(ACTIVE)

  startTime DateTime @default(now())
  endTime   DateTime?

  secondsBilled Int @default(0)

  creditsSpentMilli Int @default(0)

  rateMilliCreditsPerSecond Int @default(1000)

  user    User @relation("CallsMade", fields: [userId], references: [id])
  creator User @relation("CallsReceived", fields: [creatorId], references: [id])

  @@index([userId])
  @@index([creatorId])
  @@index([status])
}

model Group {
  id      String @id @default(cuid())
  name    String
  ownerId String

  owner User @relation("UserGroupsOwned", fields: [ownerId], references: [id])

  members    GroupMember[]
  groupCalls GroupCall[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GroupMember {
  id      String @id @default(cuid())
  groupId String
  userId  String

  role     String   @default("member")
  joinedAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id])
  user  User  @relation("UserGroupMemberships", fields: [userId], references: [id])

  @@unique([groupId, userId])
  @@index([userId])
}

model GroupCall {
  id      String @id @default(cuid())
  groupId String
  hostId  String

  startTime DateTime @default(now())
  endTime   DateTime?

  minutes   Int?
  totalCost Int?

  group Group @relation(fields: [groupId], references: [id])
  host  User  @relation("UserHostedGroupCalls", fields: [hostId], references: [id])

  @@index([groupId])
  @@index([hostId])
}
